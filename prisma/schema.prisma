generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String   @db.Text
  expiresAt DateTime

  @@map("session")
}

model User {
  id        String      @id @default(uuid())
  firstName String
  lastName  String
  email     String      @unique
  pwdHash   String      @unique
  directory Directory[]
  joinedAt  DateTime    @default(now())

  @@map("users")
}

model Directory {
  id        String   @id @default(uuid())
  owner     User     @relation(fields: [ownerId], references: [id])
  ownerId   String
  dirName   String
  dirSize   String
  files     File[]
  createdAt DateTime @default(now())

  @@map("directories")
}

model File {
  id         String      @id @default(uuid())
  directory  Directory[]
  name       String
  size       String
  uploadedAt DateTime    @default(now())

  @@map("files")
}
